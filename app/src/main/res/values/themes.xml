<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DevblogApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="android:fontFamily">@font/poppins</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="MyBorderButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/grey</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Theme.DevblogApplication" parent="Base.Theme.DevblogApplication" />
</resources>