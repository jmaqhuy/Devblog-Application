<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="vm"
            type="com.example.devblogapplication.viewmodel.PostDetailViewModel" />
    </data>
    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.PostDetailActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:imageUrl="@{vm.post.data.thumbnail}"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="412:210"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_top_bg"
                android:backgroundTint="@color/white"
                android:layout_marginTop="-15dp"
                android:padding="20dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/authorAvatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sample_avatar"
                    android:scaleType="centerCrop"
                    app:riv_oval="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:imageUrl="@{vm.post.data.author.avatar}"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/authorAvatar"
                    app:layout_constraintStart_toEndOf="@id/authorAvatar"
                    android:layout_marginStart="10dp"
                    android:text="@{vm.post.data.author.fullName}"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp"
                    android:includeFontPadding="false" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/authorAvatar"
                    app:layout_constraintStart_toEndOf="@id/authorAvatar"
                    android:layout_marginStart="10dp"
                    android:text="@{'@' + vm.post.data.author.username}"
                    android:fontFamily="@font/poppins_italic"
                    android:textSize="13sp"
                    android:includeFontPadding="false"/>
                <ImageButton
                    android:id="@+id/more"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@null"
                    android:src="@drawable/ic_more"/>
                <TextView
                    android:id="@+id/postTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/authorAvatar"
                    android:maxLength="55"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="@{vm.post.data.title}"/>
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/flexbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start"
                    app:alignItems="flex_start"
                    app:alignContent="flex_start"
                    app:layout_constraintTop_toBottomOf="@id/postTitle"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/publicDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/flexbox"
                    android:layout_marginTop="10dp"
                    android:text="@{vm.post.data.publicationDate.toString()}"/>

                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/publicDate"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    app:markdown="@{vm.post.data.content}"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>