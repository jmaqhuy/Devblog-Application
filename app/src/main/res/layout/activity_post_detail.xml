<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="vm"
            type="com.example.devblogapplication.viewmodel.PostDetailViewModel" />
        <variable
            name="postListener"
            type="com.example.devblogapplication.view.adapter.PostAdapter.OnPostActionListener" />
        <variable
            name="commentListener"
            type="com.example.devblogapplication.view.adapter.CommentAdapter.OnCommentActionListener" />
        <import type="android.view.View"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/white"
        tools:context=".view.activity.PostDetailActivity">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/writeComment">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:imageUrl="@{vm.post.data.thumbnail}"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="412:210"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_top_bg"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="-15dp"
                    android:paddingTop="20dp"
                    android:paddingHorizontal="20dp">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/authorAvatar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/sample_avatar"
                        android:scaleType="centerCrop"
                        app:riv_oval="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:imageUrl="@{vm.post.data.author.avatar}"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/authorAvatar"
                        app:layout_constraintStart_toEndOf="@id/authorAvatar"
                        android:layout_marginStart="10dp"
                        android:text="@{vm.post.data.author.fullName}"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="16sp"
                        android:includeFontPadding="false" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@id/authorAvatar"
                        app:layout_constraintStart_toEndOf="@id/authorAvatar"
                        android:layout_marginStart="10dp"
                        android:text="@{'@' + vm.post.data.author.username}"
                        android:fontFamily="@font/poppins_italic"
                        android:textSize="13sp"
                        android:includeFontPadding="false"/>
                    <ImageButton
                        android:id="@+id/more"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@null"
                        android:src="@drawable/ic_more"/>
                    <TextView
                        android:id="@+id/postTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/authorAvatar"
                        android:maxLength="55"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:text="@{vm.post.data.title}"/>
                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/flexbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        app:flexDirection="row"
                        app:flexWrap="wrap"
                        app:justifyContent="flex_start"
                        app:alignItems="flex_start"
                        app:alignContent="flex_start"
                        app:layout_constraintTop_toBottomOf="@id/postTitle"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/publicDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/flexbox"
                        android:layout_marginTop="10dp"
                        android:text="@{vm.post.data.publicationDate.toString()}"/>

                    <TextView
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/publicDate"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        app:markdown="@{vm.post.data.content}"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/postInteractionZone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="horizontal">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="130dp"
                            android:layout_height="42dp"
                            android:background="@drawable/border_bg"
                            android:backgroundTint="@color/light_grey"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/likeHolder"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/border_bg"
                                app:backgroundTintBasedOnLiked="@{vm.post.data.isLiked}"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/dislike">
                                <ImageButton
                                    android:id="@+id/like"
                                    android:layout_width="42dp"
                                    android:layout_height="match_parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:background="@null"
                                    android:src="@drawable/ic_like_selector"
                                    android:onClick="@{() -> postListener.onLike(vm.post.data, 0)}"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/like"
                                    android:text="@{String.valueOf(vm.post.data.likes)}"
                                    android:textSize="17sp"
                                    android:gravity="center"/>


                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <ImageButton
                                android:id="@+id/dislike"
                                android:layout_width="42dp"
                                android:layout_height="match_parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:background="@drawable/border_bg"
                                android:src="@drawable/ic_dislike_selector"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginStart="30dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:src="@drawable/ic_comment"
                                android:onClick="@{() -> postListener.onComment(vm.post.data)}"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@{String.valueOf(vm.post.data.comments)}"
                                android:textSize="17sp"
                                android:gravity="center"
                                android:layout_marginStart="5dp"/>
                        </LinearLayout>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:src="@drawable/ic_bookmark_selector"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:onClick="@{() -> postListener.onBookmark(vm.post.data)}"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="There is no comment yet"
                        android:gravity="center"
                        android:textColor="@color/grey"
                        android:visibility="@{vm.post.data.comments > 0 ? View.GONE : View.VISIBLE}"
                        app:layout_constraintTop_toBottomOf="@id/postInteractionZone"
                        android:layout_marginTop="10dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/commentZone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/postInteractionZone"
                        android:layout_marginTop="10dp"
                        app:comments="@{vm.comments}"
                        app:listener="@{commentListener}"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
        <FrameLayout
            android:id="@+id/writeComment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/border_stroke_button"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share your thought"
                android:layout_gravity="center_vertical"
                android:textColor="@color/grey"
                android:layout_marginStart="10dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/overlayFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>